<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryBackground">
        <item name="android:background">@color/primary_background</item>
        <item name="android:fillViewport">true</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_60dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sans_medium</item>
    </style>

    <style name="Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="DialogWithRoundedCorners" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="dialogCornerRadius">@dimen/dimen_10dp</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="DialogChoicesHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">@font/sans_medium</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/txt_18sp</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_30dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_30dp</item>
    </style>

    <style name="DialogChoicesDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">@font/sans_regular</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_30dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_30dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_20dp</item>
    </style>

    <style name="DialogChoicesButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/txt_18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingStart">@dimen/dimen_10dp</item>
        <item name="android:paddingEnd">@dimen/dimen_10dp</item>
        <item name="android:fontFamily">@font/sans_medium</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="EditText">
        <item name="android:background">@color/transparent</item>
        <!--<item name="android:padding">@dimen/dimen_5dp</item>-->
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">@font/sans_regular</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>


    <style name="TextInputEditText">
        <!--<item name="android:background">@color/transparent</item>-->
        <!--<item name="android:padding">@dimen/dimen_5dp</item>-->
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">@font/sans_regular</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="hintTextAppearance">@style/HintTextInputLayout</item>
        <item name="helperTextTextAppearance">@style/HelperTextInputLayout</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/ErrorTextInputLayout</item>
        <item name="android:layout_marginTop">@dimen/dimen_2dp</item>
        <item name="prefixTextAppearance">@style/PrefixTextInputLayout</item>
    </style>

    <style name="TextInputLayoutWithoutLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="hintTextAppearance">@style/HintTextInputLayout</item>
        <item name="helperTextTextAppearance">@style/HelperTextInputLayout</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="errorTextAppearance">@style/ErrorTextInputLayout</item>
        <item name="android:layout_marginTop">@dimen/dimen_2dp</item>
        <item name="prefixTextAppearance">@style/PrefixTextInputLayout</item>
    </style>

    <style name="TextInputPasswordLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="hintTextAppearance">@style/HintTextInputLayout</item>
        <item name="helperTextTextAppearance">@style/HelperTextInputLayout</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/ErrorTextInputLayout</item>
        <item name="passwordToggleEnabled">true</item>
<!--        <item name="passwordToggleDrawable">@drawable/password_toggle</item>-->
        <item name="passwordToggleTint">@color/hint_color</item>
        <item name="android:layout_marginTop">@dimen/dimen_2dp</item>
    </style>

    <style name="TextInputPasswordLayoutWithoutLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="hintTextAppearance">@style/HintTextInputLayout</item>
        <item name="helperTextTextAppearance">@style/HelperTextInputLayout</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="errorTextAppearance">@style/ErrorTextInputLayout</item>
        <item name="passwordToggleEnabled">true</item>
<!--        <item name="passwordToggleDrawable">@drawable/password_toggle</item>-->
        <item name="passwordToggleTint">@color/hint_color</item>
        <item name="android:layout_marginTop">@dimen/dimen_2dp</item>
    </style>

    <style name="HintTextInputLayout">
        <item name="android:textSize">@dimen/txt_11sp</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:fontFamily">@font/sans_regular</item>
    </style>

    <style name="HelperTextInputLayout">
        <item name="android:textSize">@dimen/txt_11sp</item>
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:fontFamily">@font/sans_regular</item>
    </style>

    <style name="ErrorTextInputLayout">
        <item name="android:textSize">@dimen/txt_11sp</item>
        <item name="android:textColor">@color/error</item>
        <item name="android:fontFamily">@font/sans_regular</item>
    </style>

    <style name="PrefixTextInputLayout">
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">@font/sans_regular</item>
    </style>

    <style name="LoginHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_31sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/playfair_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/dimen_16dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_16dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16dp</item>
    </style>

    <style name="LoginDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sans_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/dimen_16dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_16dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16dp</item>
    </style>

    <style name="BackIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_8dp</item>
<!--        <item name="android:src">@drawable/back_arrow</item>-->
        <item name="android:padding">@dimen/dimen_8dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="HomeCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_200dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_16dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8dp</item>
        <item name="cardCornerRadius">@dimen/dimen_8dp</item>
        <item name="cardElevation">@dimen/dimen_4dp</item>
    </style>

    <style name="HomeCardBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
<!--        <item name="android:background">@drawable/home_card_bg</item>-->
        <item name="android:foreground">?selectableItemBackground</item>
    </style>


    <style name="HomeCardViewText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_26sp</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:fontFamily">@font/playfair_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginStart">@dimen/dimen_16dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="HomeCardViewTextDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">@font/playfair_bold</item>
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_16dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16dp</item>
    </style>

    <style name="NeedCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_160dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_16dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8dp</item>
        <item name="cardCornerRadius">@dimen/dimen_8dp</item>
        <item name="cardElevation">@dimen/dimen_4dp</item>
    </style>

    <style name="NeedCardViewText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_24sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">@font/playfair_bold</item>
        <item name="android:layout_marginStart">@dimen/dimen_16dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="NavigationViewItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:fontFamily">@font/sans_regular</item>
    </style>


    <style name="EmptyTextView">
        <item name="android:textSize">@dimen/txt_15sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/sans_regular</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>


</resources>